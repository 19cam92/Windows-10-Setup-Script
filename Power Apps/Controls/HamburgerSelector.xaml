<UserControl x:Class="Power_App.Controls.HamburgerSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Power_App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="PanelSelector"
          Background="Transparent" 
          Width="{StaticResource Controls.HamburgerSelector.Width}"          
          Height="{StaticResource Controls.HamburgerButton.Height}">

        <Border Margin="{StaticResource Controls.HamburgerSelector.Margin}"
                Background="{DynamicResource Color.HamburgerSelector.Background}"/>

    </Grid>
</UserControl>
